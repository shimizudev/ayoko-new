{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "unicorn", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:unicorn/recommended",
    "airbnb",
    "airbnb-typescript",
    "plugin:prettier/recommended",
    "plugin:@next/next/core-web-vitals",
    "plugin:@next/next/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 80,
        "trailingComma": "es5",
        "arrowParens": "always"
      }
    ],
    "unicorn/filename-case": [
      "error",
      {
        "case": "kebabCase"
      }
    ],
    "camelcase": "error",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "no-param-reassign": "error",
    "no-restricted-syntax": [
      "error",
      {
        "selector": "ForInStatement",
        "message": "for..in loops iterate over the entire prototype chain, which is virtually never what you want. Use Object.{keys,values,entries}, and iterate over the resulting array."
      },
      {
        "selector": "ForOfStatement",
        "message": "for..of loops are discouraged in favor of array methods like .map, .filter, .forEach, etc."
      }
    ],
    "max-lines-per-function": [
      "error",
      {
        "max": 50,
        "skipComments": true,
        "skipBlankLines": true
      }
    ],
    "max-depth": ["error", 4],
    "complexity": ["error", 10],
    "consistent-return": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "unicorn/prefer-module": "off",
    "@typescript-eslint/no-var-requires": "off",
    "unicorn/no-null": "off",
    "unicorn/prevent-abbreviations": "off",
    "unicorn/no-array-callback-reference": "off",
    "unicorn/no-array-reduce": "off",
    "unicorn/consistent-function-scoping": "off",
    "@typescript-eslint/lines-between-class-members": "off",
    "@typescript-eslint/no-empty-function": "warn",
    "@typescript-eslint/no-throw-literal": "off",
    "eslint-plugin-import/prefer-default-export": "off",
    "import/prefer-default-export": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-props-no-spreading": "off",
    "eslint-plugin-import/extensions": "off",
    "import/extensions": "off",
    "eslint-plugin-import/no-extraneous-dependencies": "off"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/explicit-module-boundary-types": "error",
        "no-console": "warn",
        "@typescript-eslint/no-unused-vars": [
          "error",
          { "argsIgnorePattern": "^_" }
        ]
      }
    }
  ]
}
